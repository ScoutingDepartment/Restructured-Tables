<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.*?>
<?import java.net.URL?>
<HBox xmlns:fx="http://javafx.com/fxml"
      xmlns="http://javafx.com/javafx"
      alignment="CENTER"
      prefWidth="1360"
      prefHeight="700"
      fx:controller="ca.warp7.rt.ext.scanner.ScannerController">

    <stylesheets>
        <URL value="@/ca/warp7/rt/res/style.css"/>
    </stylesheets>


    <VBox HBox.hgrow="ALWAYS" alignment="CENTER" fx:id="imageContainer">
        <ImageView fx:id="streamImageView" preserveRatio="true"/>
    </VBox>

    <VBox spacing="10" alignment="TOP_CENTER" style="-fx-padding: 10">

        <Label fx:id="resultLabel" text="No QR code found" prefWidth="360" wrapText="true"
               alignment="TOP_LEFT" textAlignment="JUSTIFY" prefHeight="240"/>


        <HBox spacing="5" maxWidth="360">
            <Button text="Pause" prefWidth="400" HBox.hgrow="ALWAYS">
                <graphic>
                    <FontIcon iconLiteral="fas-times:16:1e2e4a"/>
                </graphic>
            </Button>
            <Button text="Text" prefWidth="400" HBox.hgrow="ALWAYS">
                <graphic>
                    <FontIcon iconLiteral="fas-plus:16:1e2e4a"/>
                </graphic>
            </Button>

            <Button text="Clear" prefWidth="400" HBox.hgrow="ALWAYS">
                <graphic>
                    <FontIcon iconLiteral="fas-trash:16:1e2e4a"/>
                </graphic>
            </Button>
        </HBox>

        <ListView fx:id="scanList" VBox.vgrow="ALWAYS"/>


        <HBox spacing="5" maxWidth="360">
            <Button text="Commit" prefWidth="400" HBox.hgrow="ALWAYS">
                <graphic>
                    <FontIcon iconLiteral="fas-check:16:1e2e4a"/>
                </graphic>
            </Button>
            <Button text="CSV" prefWidth="400" HBox.hgrow="ALWAYS">
                <graphic>
                    <FontIcon iconLiteral="fas-file-excel:16:1e2e4a"/>
                </graphic>
            </Button>
            <Button text="JSON" prefWidth="400" HBox.hgrow="ALWAYS">
                <graphic>
                    <FontIcon iconLiteral="fas-file-code:16:1e2e4a"/>
                </graphic>
            </Button>
        </HBox>

    </VBox>


</HBox>