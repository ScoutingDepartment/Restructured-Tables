<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import org.kordamp.ikonli.javafx.*?>
<ToolBar xmlns="http://javafx.com/javafx"
         xmlns:fx="http://javafx.com/fxml"
         prefWidth="220"
         HBox.hgrow="ALWAYS" fx:controller="ca.warp7.rt.base.AppBarController">

    <Label text="2018iri &lt;&lt; 865" styleClass="highlight-blue" minWidth="225">
        <graphic>
            <FontIcon iconLiteral="fas-database:18:white"/>
        </graphic>
    </Label>

    <Separator />

    <MenuButton text="New">
        <graphic>
            <FontIcon iconLiteral="fas-plus:18:gray"/>
        </graphic>
        <items>
            <MenuItem text="Python Script">
                <graphic>
                    <FontIcon iconLiteral="fab-python:20:gray"/>
                </graphic>
            </MenuItem>
            <MenuItem text="View">
                <graphic>
                    <FontIcon iconLiteral="fas-eye:18:gray"/>
                </graphic>
            </MenuItem>
        </items>
    </MenuButton>

    <Separator/>

    <Button text="Sync with TBA" >
        <graphic>
            <FontIcon iconLiteral="fas-sync:18:gray"/>
        </graphic>
    </Button>


    <Separator/>


    <Label text="Yu Liu" styleClass="highlight-blue">
        <graphic>
            <FontIcon iconLiteral="fas-user:16:white"/>
        </graphic>
    </Label>

    <Separator/>

    <Button text="System Check" onAction="#onSystemStateAction">
        <graphic>
            <FontIcon iconLiteral="fas-info-circle:18:gray"/>
        </graphic>
    </Button>

    <Separator/>

    <Button onAction="#onScannerAction">
        <graphic>
            <FontIcon iconLiteral="fas-camera:18:gray"/>
        </graphic>
    </Button>

    <Separator/>

    <Button onAction="#onPythonScripts">
        <graphic>
            <FontIcon iconLiteral="fab-python:18:gray"/>
        </graphic>
    </Button>
</ToolBar>