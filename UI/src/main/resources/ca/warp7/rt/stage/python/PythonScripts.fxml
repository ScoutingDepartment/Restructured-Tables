<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<?import java.net.URL?>
<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" HBox.hgrow="ALWAYS"
      fx:controller="ca.warp7.rt.java.python.PythonController">
    <stylesheets>
        <URL value="@/ca/warp7/rt/stage/main.css"/>
    </stylesheets>
    <HBox VBox.vgrow="ALWAYS">
        <BorderPane fx:id="codeRoot" HBox.hgrow="ALWAYS">
        </BorderPane>
    </HBox>
    <ToolBar>
        <Button text="New Script">
            <graphic>
                <FontIcon iconLiteral="fas-plus:18:gray"/>
            </graphic>
        </Button>
        <Separator/>
        <Label styleClass="highlight-blue" text="1 in 3 functions finished with 2 errors"/>

        <Separator/>
        <Button text="Run script">
            <graphic>
                <FontIcon iconLiteral="far-play-circle:18:gray"/>
            </graphic>
        </Button>
        <Button text="Show Logs">
            <graphic>
                <FontIcon iconLiteral="fas-bug:18:gray"/>
            </graphic>
        </Button>

        <Separator/>
        <Button fx:id="themeChange" text="Switch Theme">
            <graphic>
                <FontIcon iconLiteral="fas-paint-brush:18:gray"/>
            </graphic>
        </Button>
    </ToolBar>
</VBox>