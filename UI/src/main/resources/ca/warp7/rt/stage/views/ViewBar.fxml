<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import org.kordamp.ikonli.javafx.*?>
<ToolBar xmlns="http://javafx.com/javafx"
         xmlns:fx="http://javafx.com/fxml" prefWidth="220" HBox.hgrow="ALWAYS">

    <MenuButton text="View Options" popupSide="TOP">
        <graphic>
            <FontIcon iconLiteral="fas-eye:18:gray"/>
        </graphic>
        <items>
            <MenuItem text="Configure View">
                <graphic>
                    <FontIcon iconLiteral="fas-edit:18:gray"/>
                </graphic>
            </MenuItem>
            <MenuItem text="Create Pivot Table">
                <graphic>
                    <FontIcon iconLiteral="fas-table:18:gray"/>
                </graphic>
            </MenuItem>
            <MenuItem text="Create Plot">
                <graphic>
                    <FontIcon iconLiteral="fas-chart-bar:18:gray"/>
                </graphic>
            </MenuItem>
            <MenuItem text="Clone View">
                <graphic>
                    <FontIcon iconLiteral="fas-clone:18:gray"/>
                </graphic>
            </MenuItem>
            <MenuItem text="Delete View">
                <graphic>
                    <FontIcon iconLiteral="fas-trash:18:gray"/>
                </graphic>
            </MenuItem>
        </items>
    </MenuButton>

    <Separator/>

    <CheckBox text="Transpose"/>

    <Separator/>

    <Button text="Filter">
        <graphic>
            <FontIcon iconLiteral="fas-filter:18:gray"/>
        </graphic>
    </Button>

    <Separator/>

    <Button text="Format">
        <graphic>
            <FontIcon iconLiteral="fas-paint-brush:18:gray"/>
        </graphic>
    </Button>

    <Separator/>

    <FontIcon iconLiteral="fas-search:18:gray"/>
    <Label text="Find:"/>
    <TextField focusTraversable="false" prefWidth="220"/>

    <Separator/>

    <HBox alignment="CENTER" spacing="10">
        <Label text="Row" styleClass="highlight-blue">
            <graphic>
                <FontIcon iconLiteral="fas-arrows-alt-v:18:white"/>
            </graphic>
        </Label>
        <Label text="Column" styleClass="highlight-blue">
            <graphic>
                <FontIcon iconLiteral="fas-arrows-alt-h:18:white"/>
            </graphic>
        </Label>
    </HBox>

</ToolBar>