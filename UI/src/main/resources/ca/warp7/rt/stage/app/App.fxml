<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.*?>
<?import java.net.URL?>
<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      prefWidth="1600" prefHeight="850" minWidth="800" minHeight="450"
      fx:controller="ca.warp7.rt.java.app.AppController">

    <stylesheets>
        <URL value="@/ca/warp7/rt/style/main.css"/>
    </stylesheets>

    <ToolBar prefWidth="220"
             HBox.hgrow="ALWAYS">

        <Label fx:id="dataset" styleClass="highlight-blue" minWidth="225"
               onMouseClicked="#onEventSelectAction">
            <graphic>
                <FontIcon iconLiteral="fas-database:18:white"/>
            </graphic>
        </Label>

        <Separator/>

        <MenuButton text="New" fx:id="newButton">
            <graphic>
                <FontIcon iconLiteral="fas-plus:18:gray"/>
            </graphic>
        </MenuButton>

        <Separator/>


        <Label fx:id="user" styleClass="highlight-blue">
            <graphic>
                <FontIcon iconLiteral="fas-user:16:white"/>
            </graphic>
        </Label>

        <Separator/>

        <Button text="System Check" onAction="#onSystemStateAction">
            <graphic>
                <FontIcon iconLiteral="fas-info-circle:18:gray"/>
            </graphic>
        </Button>

        <Separator/>

        <Button onAction="#onScannerAction">
            <graphic>
                <FontIcon iconLiteral="fas-camera:18:gray"/>
            </graphic>
        </Button>

        <Separator/>

        <Button onAction="#onPythonScripts">
            <graphic>
                <FontIcon iconLiteral="fab-python:18:gray"/>
            </graphic>
        </Button>
    </ToolBar>

    <HBox VBox.vgrow="ALWAYS">
        <VBox prefWidth="240" alignment="TOP_CENTER">
            <ListView VBox.vgrow="ALWAYS" fx:id="appTabs"/>
        </VBox>
        <BorderPane fx:id="tabContent"/>
    </HBox>

</VBox>