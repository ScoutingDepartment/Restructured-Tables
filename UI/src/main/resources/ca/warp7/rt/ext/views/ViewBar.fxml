<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import org.kordamp.ikonli.javafx.*?>
<ToolBar xmlns="http://javafx.com/javafx"
         xmlns:fx="http://javafx.com/fxml" prefWidth="220" HBox.hgrow="ALWAYS">

    <MenuButton text="Options">
        <graphic>
            <FontIcon iconLiteral="fas-eye:16:gray"/>
        </graphic>
        <items>
            <MenuItem text="New View">
                <graphic>
                    <FontIcon iconLiteral="fas-plus:16:gray"/>
                </graphic>
            </MenuItem>
            <MenuItem text="Configure View">
                <graphic>
                    <FontIcon iconLiteral="fas-edit:16:gray"/>
                </graphic>
            </MenuItem>
            <MenuItem text="Create Pivot Table">
                <graphic>
                    <FontIcon iconLiteral="fas-table:16:gray"/>
                </graphic>
            </MenuItem>
            <MenuItem text="Create Plot">
                <graphic>
                    <FontIcon iconLiteral="fas-chart-bar:16:gray"/>
                </graphic>
            </MenuItem>
            <MenuItem text="Clone View">
                <graphic>
                    <FontIcon iconLiteral="fas-clone:16:gray"/>
                </graphic>
            </MenuItem>
            <MenuItem text="Delete View">
                <graphic>
                    <FontIcon iconLiteral="fas-trash:16:gray"/>
                </graphic>
            </MenuItem>
        </items>
    </MenuButton>

    <Separator/>

    <CheckBox text="Transpose"/>

    <Separator/>

    <Button text="Filter">
        <graphic>
            <FontIcon iconLiteral="fas-filter:16:gray"/>
        </graphic>
    </Button>

    <Separator/>

    <Button text="Format">
        <graphic>
            <FontIcon iconLiteral="fas-paint-brush:16:gray"/>
        </graphic>
    </Button>

    <Separator/>

    <FontIcon iconLiteral="fas-search:16:gray"/>
    <Label text="Find:"/>
    <TextField focusTraversable="false" prefWidth="220"/>

</ToolBar>