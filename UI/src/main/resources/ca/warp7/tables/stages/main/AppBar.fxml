<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import org.kordamp.ikonli.javafx.*?>
<ToolBar xmlns="http://javafx.com/javafx"
         xmlns:fx="http://javafx.com/fxml"
         prefWidth="220"
         HBox.hgrow="ALWAYS" fx:controller="ca.warp7.tables.controller.main.AppBarController">

    <Button text="Import" onAction="#onLoadAction">
        <graphic>
            <FontIcon iconLiteral="fas-folder-open:18:gray"/>
        </graphic>
    </Button>

    <Button text="Save As" onAction="#onLoadAction">
        <graphic>
            <FontIcon iconLiteral="fas-save:18:gray"/>
        </graphic>
    </Button>

    <Button text="New" onAction="#onNewViewAction">
        <graphic>
            <FontIcon iconLiteral="fas-plus:18:gray"/>
        </graphic>
    </Button>

    <Separator/>

    <FontIcon iconLiteral="fas-database:18:gray"/>

    <Label text="Dataset:"/>

    <Label text="2018iri" styleClass="highlight-blue" onMouseClicked="#onEventSelectAction"/>

    <Separator/>

    <Button text="Scanner" onAction="#onScannerAction">
        <graphic>
            <FontIcon iconLiteral="fas-camera:18:gray"/>
        </graphic>
    </Button>

    <Separator/>

    <Button text="Python Scripts" onAction="#onPythonScripts">
        <graphic>
            <FontIcon iconLiteral="fab-python:18:gray"/>
        </graphic>
    </Button>

    <Separator/>

    <FontIcon iconLiteral="fas-user:18:gray"/>

    <Label text="User:"/>
    <Label text="Yu Liu" styleClass="highlight-blue"/>

    <Separator/>

    <Button text="System Check" onAction="#onSystemStateAction">
        <graphic>
            <FontIcon iconLiteral="fas-info-circle:18:gray"/>
        </graphic>
    </Button>

    <Button text="Refresh" onAction="#onSystemStateAction">
        <graphic>
            <FontIcon iconLiteral="fas-sync:18:gray"/>
        </graphic>
    </Button>
</ToolBar>