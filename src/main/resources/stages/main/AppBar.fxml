<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<ToolBar xmlns="http://javafx.com/javafx"
         xmlns:fx="http://javafx.com/fxml"
         prefWidth="220"
         HBox.hgrow="ALWAYS" fx:controller="ca.warp7.tables.controller.main.AppBarController">

    <Button text="System State" onAction="#onSystemStateAction"/>

    <Button text="Load" onAction="#onLoadAction">
        <graphic>
            <FontIcon iconLiteral="fas-folder-open:20:gray"/>
        </graphic>
    </Button>

    <Button text="Save As" onAction="#onLoadAction">
        <graphic>
            <FontIcon iconLiteral="fas-save:20:gray"/>
        </graphic>
    </Button>

    <Separator/>

    <Label text="Event ID:"/>

    <Label text="2018iri" style="-fx-font-weight:bold"/>

    <Button text="Change" onAction="#onEventSelectAction"/>

    <Button text="Edit Boards">
        <graphic>
            <FontIcon iconLiteral="fas-clipboard:20:gray"/>
        </graphic>
    </Button>

    <Separator/>

    <Label text="Matches Scouted:"/>
    <Label text="36/105" style="-fx-font-weight:bold; -fx-text-fill: #3c5c94"/>

    <Button text="Scan from App" onAction="#onScannerAction">
        <graphic>
            <FontIcon iconLiteral="fas-camera:20:gray"/>
        </graphic>
    </Button>

    <Separator/>

    <Button text="Python Analysis" onAction="#onSystemStateAction">
        <graphic>
            <FontIcon iconLiteral="fab-python:20:gray"/>
        </graphic>
    </Button>

    <Separator/>

    <Label text="Wrong:"/>
    <Label text="100/216" style="-fx-font-weight:bold; -fx-text-fill: #ff0000"/>

    <Label text="Verified:"/>
    <Label text="0/216" style="-fx-font-weight:bold; -fx-text-fill: #008000"/>

    <Button text="Show All"/>
</ToolBar>