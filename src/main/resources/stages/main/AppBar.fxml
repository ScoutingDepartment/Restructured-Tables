<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<ToolBar xmlns="http://javafx.com/javafx"
         xmlns:fx="http://javafx.com/fxml"
         prefWidth="220"
         HBox.hgrow="ALWAYS" fx:controller="ca.warp7.tables.controller.main.AppBarController">

    <Button text="System State" onAction="#onSystemStateAction"/>

    <Button text="Load" onAction="#onLoadAction"/>

    <Button text="Save As" onAction="#onLoadAction"/>

    <Separator/>

    <Label text="Event:"/>

    <Label text="2018iri" style="-fx-font-weight:bold"/>

    <Button text="Configure" onAction="#onEventConfigureAction"/>

    <Button text="Boards"/>

    <Separator/>

    <Label text="Matches:"/>
    <Label text="36/105" style="-fx-font-weight:bold; -fx-text-fill: #3c5c94"/>

    <Button text="Scanner" onAction="#onScannerAction"/>

    <Button text="Schedule"/>

    <Separator/>

    <Label text="Analysis:"/>
    <!--<Label text="Outdated" style="-fx-font-weight:bold; -fx-text-fill: #f08000"/>
-->
    <Button text="Open" onAction="#onSystemStateAction"/>

    <Button text="Configure"/>

    <Separator/>

    <Label text="Wrong:"/>
    <Label text="100/216" style="-fx-font-weight:bold; -fx-text-fill: #ff0000"/>

    <Label text="Verified:"/>
    <Label text="0/216" style="-fx-font-weight:bold; -fx-text-fill: #008000"/>

    <Button text="Verify"/>
</ToolBar>