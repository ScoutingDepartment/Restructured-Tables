<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<ToolBar xmlns="http://javafx.com/javafx"
         xmlns:fx="http://javafx.com/fxml" prefWidth="220" HBox.hgrow="ALWAYS">

    <Button text="View Info">
        <graphic>
            <FontIcon iconLiteral="fas-eye:18:gray"/>
        </graphic>
    </Button>

    <Separator/>

    <ChoiceBox value="Entry">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="Entry"/>
                <String fx:value="Team"/>
                <String fx:value="Match"/>
                <String fx:value="Scout"/>
                <String fx:value="Event"/>
            </FXCollections>
        </items>
    </ChoiceBox>

    <Separator/>

    <CheckBox text="Transpose"/>

    <Separator/>

    <Button text="Filter">
        <graphic>
            <FontIcon iconLiteral="fas-filter:18:gray"/>
        </graphic>
    </Button>

    <Separator/>

    <Button text="Format">
        <graphic>
            <FontIcon iconLiteral="fas-paint-brush:18:gray"/>
        </graphic>
    </Button>

    <Separator/>

    <Button text="Plot">
        <graphic>
            <FontIcon iconLiteral="fas-chart-bar:18:gray"/>
        </graphic>
    </Button>

    <Separator/>

    <Button text="Pivot">
        <graphic>
            <FontIcon iconLiteral="fas-table:18:gray"/>
        </graphic>
    </Button>

    <Separator/>

    <FontIcon iconLiteral="fas-search:18:gray"/>
    <Label text="Find:"/>
    <TextField focusTraversable="false" prefWidth="300"/>

    <Separator/>

    <Button text="Export">
        <graphic>
            <FontIcon iconLiteral="fas-share:18:gray"/>
        </graphic>
    </Button>

    <Button text="Clone">
        <graphic>
            <FontIcon iconLiteral="fas-clone:18:gray"/>
        </graphic>
    </Button>

    <Separator/>
    <Label text="RowName : ColumnName"/>

</ToolBar>